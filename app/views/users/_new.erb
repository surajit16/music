<div id="signup-wraper_out">
  <div id="signup-wraper">
    <%= form_for @user do |f| %>
      <legend>Sign up to <span class="blue">Music</span></legend>
      <div class="body">
        <label>Name</label>
        <%= f.text_field :name %>
        <label>Email</label>
        <%= f.text_field :email %>
        <label>Password</label>
        <%= f.password_field :password %>

        <label>Retype Password</label>
        <%= f.password_field :password_confirmation %>

      </div>

      <div class="footer">
        <%= f.submit "Sign Up" , :class=>"btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
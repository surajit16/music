<div id="signup-wraper_out">
  <div id="signup-wraper">
    <%= form_for @user do |f| %>

      <legend>Edit Profile</legend>
      <div class="body">
        <label>Name</label>
        <%= f.text_field :name %>

        <label>Email</label>
        <%= f.text_field :email, :disabled=>:disabled %>

        <label>Photo</label>
        <%= f.file_field :image, :style=>"width: 210px;margin-bottom: 10px;" %>

        <label>or image URL</label>
        <%= f.text_field :remote_image_url %>

      </div>

      <div class="footer">
        <%= f.submit "Update" , :class=>"btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>